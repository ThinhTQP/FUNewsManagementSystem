@model FUNews.DAL.Entities.SystemAccount

<form id="createAccountForm" method="post">
    @Html.AntiForgeryToken() <!-- ✅ CSRF token bắt buộc -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="AccountName" class="form-label">👤 Account Name</label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AccountEmail" class="form-label">📧 Account Email</label>
        <input asp-for="AccountEmail" class="form-control" />
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AccountRole" class="form-label">🎭 Account Role</label>
        <select asp-for="AccountRole" class="form-select">
            <option value="1">🌟 Staff</option>
            <option value="2">🎓 Lecturer</option>
        </select>
        <span asp-validation-for="AccountRole" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AccountPassword" class="form-label">🔒 Password</label>
        <input asp-for="AccountPassword" type="password" class="form-control" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">❌ Cancel</button>
        <button type="submit" class="btn btn-primary">✅ Create</button>
    </div>
</form>


